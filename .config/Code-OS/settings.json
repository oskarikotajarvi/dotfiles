{
    "editor.scrollbar.vertical": "hidden",
    "editor.minimap.enabled": false,
    "window.menuBarVisibility": "toggle",
    "workbench.statusBar.visible": true,
    "workbench.colorCustomizations": {
        "activityBar.background": "#0B110F",
        "progressBar.background": "#0B110F",
        "sideBar.background": "#0B110F",
        "editor.background": "#0B110F",
        "editorGroupHeader.tabsBackground": "#0B110F",
        "editorGroupHeader.tabsBorder": "#0B110F",
        "editorGroup.emptyBackground": "#0B110F",
        "editorGroupHeader.noTabsBackground": "#0B110F",
        "tab.activeBackground": "#0B110F",
        "tab.inactiveBackground": "#0B110F",
        "editorWidget.background": "#0B110F",
        "panel.background": "#0B110F",
        "statusBar.background": "#0B110F"
    },
    "editor.fontFamily": "'Consolas', 'DejaVu Sans Mono', 'monospace'",
    "workbench.activityBar.visible": true,
    "workbench.iconTheme": "vs-minimal",
    "workbench.tree.indent": 4,
    "workbench.colorTheme": "Dark++",
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "typescript.updateImportsOnFileMove.enabled": "always",
    "breadcrumbs.enabled": true
}
